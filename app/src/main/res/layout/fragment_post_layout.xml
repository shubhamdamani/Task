<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/postrel"
    android:background="#dee1e1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1sp"
        card_view:cardElevation="10dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="2dp"
       >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="8dp">

        <TextView

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_view"
            android:id="@+id/prof_icon"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="S"
            android:textSize="20dp"
            android:textStyle="bold"
            android:transitionName="pImageTransition"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/content_tag"
            android:visibility="invisible"/>
    <TextView
        android:layout_width="wrap_content"

        android:layout_toRightOf="@+id/prof_icon"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Shubham"
        android:paddingHorizontal="15dp"
        android:textSize="14sp"
        android:id="@+id/post_username"
        android:textColor="#4a4a4a"
        android:textStyle="bold"
        android:transitionName="pNameTransition"

        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/post_username"
            android:layout_toRightOf="@+id/prof_icon"
            android:layout_height="wrap_content"
            android:text="College"
            android:paddingHorizontal="15dp"
            android:textSize="12sp"
            android:id="@+id/post_college"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:text="Interviewtype"
            android:padding="5dp"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/topic_tag"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/job_tag"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:text="Jobtype"
            android:padding="5dp"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/job_tag"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/interview_tag"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/interview_tag"
            android:text="Topic"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:padding="5dp"
            android:textColor="#000000"
            android:background="#ffffff"
            android:paddingLeft="50dp"
            android:textSize="@dimen/_8ssp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:textSize="22dp"
            android:id="@+id/post_company"
            android:text="Company"
            android:textStyle="bold"
            android:layout_below="@+id/prof_icon"
            android:textColor="#464947"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/post_company"
        android:layout_marginLeft="@dimen/_5sdp"
        android:padding="10dp"
        android:textSize="22dp"
        android:id="@+id/title_tag"
        android:text="Title"
        android:textStyle="bold"
        android:layout_below="@+id/prof_icon"
        android:textColor="#464947"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/title_tag"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:id="@+id/nup"
                android:padding="5dp"/>
            <ImageView
                android:id="@+id/like"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/eye" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:visibility="invisible"
                android:id="@+id/ndown"/>

            <ImageView
                android:id="@+id/dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/bookmarkState"
                android:visibility="invisible"/>



        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/user_id"
            android:padding="10dp"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/post_title"
            android:padding="10dp"
            android:visibility="invisible"/>


        <TextView
            android:id="@+id/post_id"
            android:layout_width="115dp"
            android:layout_height="88dp"
            android:padding="10dp"
            android:text="0"
            android:visibility="invisible" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>